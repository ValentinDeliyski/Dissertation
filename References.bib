   keywords = {Galaxies: active,MHD,black hole physics,techniques: interferometric},
   month = {2},
   pages = {735-756},
   publisher = {Oxford University Press},
   title = {On the comparison of AGN with GRMHD simulations – II. M87},
   volume = {528},
   year = {2024},
}

@article{Yao2021,
    author = {Yao, Philippe Z and Dexter, Jason and Chen, Alexander Y and Ryan, Benjamin R and Wong, George N},
