   issue = {12},
   journal = {Physical Review},
   month = {3},
   pages = {1912-1925},
   title = {On the Classical Radiation of Accelerated Electrons},
   volume = {75},
   url = {https://journals.aps.org/pr/abstract/10.1103/PhysRev.75.1912},
   year = {1949},
}
